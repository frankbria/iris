{
  "visual": {
    "threshold": 0.1,
    "devices": ["desktop", "tablet", "mobile"],
    "baseline": {
      "strategy": "branch",
      "reference": "main"
    },
    "capture": {
      "fullPage": true,
      "format": "png",
      "quality": 90,
      "stabilization": {
        "waitForFonts": true,
        "disableAnimations": true,
        "delay": 500,
        "waitForNetworkIdle": true,
        "networkIdleTimeout": 2000
      }
    },
    "diff": {
      "antiAliasing": true,
      "maxConcurrency": 3
    }
  }
}
